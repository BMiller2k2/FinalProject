<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FinalProject"
             x:Class="FinalProject.MainPage">

    <StackLayout Padding="10">
        <Label Text="Notification Center"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Button Text="Enable Notifications"
                Clicked="OnEnableNotificationsClicked" />

        <Button Text="Disable Notifications"
                Clicked="OnDisableNotificationsClicked" />

        <Label Text="Notifications Status:"
               FontSize="18"
               VerticalOptions="Start" />

        <Label x:Name="StatusLabel"
               FontSize="16"
               VerticalOptions="Start" />
    </StackLayout>
</ContentPage>
